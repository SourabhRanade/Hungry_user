<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.hungry_user.MainActivity">

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <!--This is the first page displayed TO THE ADMIN ONLY when the app is loaded for the very first time.-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity = "center_horizontal"
                android:text="Welcome to Hungry!\n\nPlease enter your name and contact number to create your account. "
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"/>


            <EditText
                android:id="@+id/userEmailInputActivityMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:inputType="text" />

            <EditText
                android:id="@+id/userPasswordInputActivityMain"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="60dp"
                android:hint="Password"
                android:inputType="textPassword"/>


            <Button
                android:id="@+id/authenticateButtonActivityMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:layout_margin="20dp"
                android:text="Authenticate"
                android:padding="8dp"
                android:textColor="#FFF"
                android:onClick="createAccount" />



        </LinearLayout>

    </ScrollView>
